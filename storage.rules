rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Deny all client-side writes - uploads must go through backend
    // The uploadImages cloud function handles all uploads securely
    match /memories/{fileName} {
      allow write: if false; // All uploads must go through backend cloud function
    }
    
    // Deny writes to all other paths
    match /{allPaths=**} {
      allow write: if false;
    }
  }
}
